<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.keith.finalyearproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true" />

        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReferenceActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ReferenceDetailsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConverterActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CalculatorActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ConverterHowToBinaryActivity"
            android:parentActivityName=".ConverterActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ConverterHowToDecimalActivity"
            android:parentActivityName=".ConverterActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ConverterHowToHexadecimalActivity"
            android:parentActivityName=".ConverterActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ConverterHowToOctalActivity"
            android:parentActivityName=".ConverterActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CalculatorTwosComplementPopup"
            android:parentActivityName=".CalculatorActivity"
            android:theme="@style/AppTheme.PopUpTheme" />
        <activity
            android:name=".CalculatorFixedPointPopUp"
            android:parentActivityName=".CalculatorActivity"
            android:theme="@style/AppTheme.PopUpTheme" />

        <activity
            android:name=".LogicDesignerActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" /><!--
        <activity android:name="com.example.keith.mylibrary.Stage"
            android:parentActivityName=".LogicDesignerActivity"
            android:theme="@style/AppTheme"/>-->
        <activity
            android:name=".CalculatorProblemGeneratorActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>
