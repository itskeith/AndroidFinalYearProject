<resources>

    <!-- App theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColourPrimary</item>
        <item name="colorPrimaryDark">@color/ColourPrimaryDark</item>
    </style>

    <!-- Toolbar Style -->
    <style name="DarkToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- Define Style for PopUps -->
    <style name="AppTheme.PopUpTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/ColourPrimary</item>
        <item name="colorPrimaryDark">@color/ColourPrimaryDark</item>
    </style>
</resources>
