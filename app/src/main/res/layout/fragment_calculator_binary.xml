<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.375"
            android:background="@drawable/buttons_calc"
            android:text="Clr"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/dark_orange" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.375"
            android:background="@drawable/buttons_calc"
            android:text="Del"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/dark_orange" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@drawable/buttons_calc"
            android:text="+"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonOne"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/buttons_calc"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/buttonZero"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/buttonOne"
                android:layout_weight="1"
                android:background="@drawable/buttons_calc"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/buttonPoint"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/buttonZero"
                android:layout_weight="0.5"
                android:background="@drawable/buttons_calc"
                android:text="."
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/buttonTwoComplement"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/buttonZero"
                android:layout_weight="0.5"
                android:background="@drawable/buttons_calc"
                android:text="Two's Complement Size"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/magenta" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/buttons_calc"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/blue" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/buttonMinus"
                android:layout_weight="1"
                android:background="@drawable/buttons_calc"
                android:text="/"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/blue" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/buttonDivide"
                android:layout_weight="1"
                android:background="@drawable/buttons_calc"
                android:text="*"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/blue" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>