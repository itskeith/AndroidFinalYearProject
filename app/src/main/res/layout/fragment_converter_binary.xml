<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewEnter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#636366"
                android:text="Number to be converted:"
                android:elevation="4dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/converterInputBinary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="8dp"
                android:inputType="number" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">
            <Button
                android:id="@+id/converterButtonHowto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="How to?"
                android:background="@drawable/buttons_calc"
                />
        </LinearLayout>
    </LinearLayout>


    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <TextView
        android:id="@+id/Decimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:text="Decimal:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#989898"
        android:elevation="4dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <TextView
        android:id="@+id/Hexadecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:text="Hexadecimal:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewHexadecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#989898"
        android:elevation="4dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <TextView
        android:id="@+id/Octal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:text="Octal:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewOctal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#989898"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />
    <LinearLayout
        android:id="@+id/converterLinearLayoutButtons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <Button
            android:id="@+id/converterButtonZero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/buttons_calc"
            android:text = "0"/>
        <Button
            android:id="@+id/converterButtonOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/buttons_calc"
            android:text = "1"/>
        <Button
            android:id="@+id/converterButtonDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/buttons_calc"
            android:text="Delete"/>
    </LinearLayout>
</LinearLayout>